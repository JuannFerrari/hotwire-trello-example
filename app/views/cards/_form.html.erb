<%= form_with(model: card, url: url, class: klass, data: { controller: "clear-input", action: "turbo:submit-end->clear-input#trigger" }) do |form| %>
  <%= form.text_field :name, placeholder: 'Write a new card...', id: 'js-name-value', class: 'card__title card__title--input', data: { clear_input_target: "input"} %>
  <%= form.number_field :position, id: 'js-position-value', class: 'hidden' %>
  <%= form.number_field :column_id, id: 'js-column-id', class: 'hidden' %>
  <%= form.submit 'Send', class: 'card__submit js-card__submit hidden'%>
<% end %>
